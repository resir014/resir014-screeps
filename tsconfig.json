{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
